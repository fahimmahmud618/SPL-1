#include "header.h"
using namespace std;

void delete_student()
{
    int batch_serial, student_id,choice;
    string makefilename;
    char* filename;

    system("cls");
    gotoxy(5,3);
    cout<<"Admin :: Student Control :: Remove Student";

    gotoxy(10,5);
    cout<<"1.Remove Batchwise";
    gotoxy(10,6);
    cout<<"2.Remove personally";

    gotoxy(15,9);
    cout<<"Enter your choice: ";
    cin>>choice;

    if(choice==1)
    {
        gotoxy(10,5);
        cout<<"Enter Batch Serial: ";

        gotoxy(40,5);
        cin>>batch_serial;

        makefilename=".//studentData//batch"+to_string(batch_serial);
        filename=&makefilename[0];
        cout<<filename;                 //bug
        if(rmdir(filename)==0)
        {
            cout<<"Batch removed Succecfully";
        }
        else
            cout<<"Couldn't remove Batch";


    }

    else if(choice==2)
    {
        gotoxy(10,5);
        cout<<"Enter Batch Serial: ";

        gotoxy(10,6);
        cout<<"Enter Student's ID: ";

        gotoxy(40,5);
        cin>>batch_serial;

        gotoxy(40,6);
        cin>>student_id;

        if(student_id<10)
                makefilename=".//studentData//batch"+to_string(batch_serial)+"//"+to_string(student_id)+".txt";
        else
                makefilename=".//studentData//batch"+to_string(batch_serial)+"//"+to_string(student_id)+".txt";
        filename=&makefilename[0];

        cout<<filename;
        if(remove(filename)==0)
        {
            cout<<"Student removed Succecfully";
        }
        else
            cout<<"Couldn't remove Student";

    }

}
